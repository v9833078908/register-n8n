# ====================================
# YouTube Settings
# ====================================
# Получить Channel ID: https://commentpicker.com/youtube-channel-id.php
YOUTUBE_CHANNEL_ID=UCxxxxxxxxxxxxxxxxxx

# Интервал проверки новых видео (в часах)
CHECK_INTERVAL_HOURS=6

# ====================================
# Anthropic API (Claude)
# ====================================
# Получить ключ: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# ====================================
# Threads API
# ====================================
# Документация: https://developers.facebook.com/docs/threads
THREADS_ACCESS_TOKEN=your_long_lived_access_token_here
THREADS_USER_ID=1234567890

# ====================================
# Telegram Bot
# ====================================
# Создать бота: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
# Ваш Chat ID (получить: /start боту, затем getUpdates)
TELEGRAM_CHAT_ID=987654321

# ====================================
# Database
# ====================================
DATABASE_URL=sqlite:///./youtube_threads_mvp.db

# ====================================
# Transcript Settings
# ====================================
# Использовать YouTube субтитры (бесплатно, быстро)
USE_YOUTUBE_CAPTIONS=true
# Fallback на Whisper API если нет субтитров (требует OPENAI_API_KEY)
ENABLE_WHISPER_FALLBACK=false
# OpenAI API для Whisper (опционально)
# OPENAI_API_KEY=sk-your-openai-api-key-here
# Язык субтитров
TRANSCRIPT_LANGUAGE=ru

# ====================================
# Content Moderation (Guardrails)
# ====================================
# Минимальная длина транскрипции (символов)
MIN_TRANSCRIPT_LENGTH=100
# Минимальное количество слов
MIN_WORD_COUNT=20
# Максимальный процент повторений (0.5 = 50%)
MAX_REPETITION_RATIO=0.5
# Минимальный процент букв (остальное цифры/символы)
MIN_ALPHA_RATIO=0.5

# ====================================
# Post Settings
# ====================================
# Лимиты Threads
MAX_POST_LENGTH=500
MIN_POST_LENGTH=20
MAX_HASHTAGS=5
MAX_EMOJIS=10

# ====================================
# Logging
# ====================================
LOG_LEVEL=INFO
LOG_FILE=youtube_threads.log

# ====================================
# Advanced Settings
# ====================================
# Количество попыток при ошибках
MAX_RETRIES=3
# Задержка между попытками (секунд)
RETRY_DELAY_SECONDS=2
# Таймаут запросов (секунд)
REQUEST_TIMEOUT_SECONDS=30
# Режим тестирования (менее строгая модерация)
TESTING_MODE=false
